{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"allowJs": false,
		"noImplicitAny": false,
		"noImplicitThis": false,
        "alwaysStrict": true,
		"sourceMap": true,
		"outDir": "./build",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"pretty": true,
		"baseUrl": "./src",
		"rootDir": "./src"
	},
	"compileOnSave": false,
	"filesGlob": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"./src/prototypes/**",
		"./src/wamp/**"
	],
	"atom": {
		"rewriteTsconfig": true
	},
	"files": [
		"./typings/index.d.ts",
		"./src/index.ts"
	]
}
